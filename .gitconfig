[user]
	name = Your Name
	email = your.work.email@organization.com

[core]
	editor = vim
	autocrlf = input
	excludesfile = ~/.gitignore_global

[push]
	default = simple

[pull]
	rebase = true

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	lg = log --oneline --graph --all --decorate
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk

[color]
	ui = auto

[diff]
	tool = vimdiff

[merge]
	tool = vimdiff